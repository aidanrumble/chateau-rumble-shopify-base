{% form 'new_comment', article %}
      
  <div class="field">
    <label for="author">{{ 'comments.label_author' | t }}</label>
    <input type="text" name="comment[author]" id="author" />
  </div>

  <div class="field">
    <label for="email">{{ 'comments.label_email' | t }}</label>
    <input type="email" name="comment[email]" id="email" required />
  </div>

  <div class="field">
    <label for="comment">{{ 'comments.label_body' | t }}</label>
    <textarea name="comment[body]" id="comment" rows="5" required></textarea>
  </div>

  <button class="btn">{{ 'comments.submit' | t }}</button>

{% endform %}